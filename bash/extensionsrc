# Import on your main *rc file

# Aliases
alias gpp="git pull --rebase"
alias dstop="docker container ls -q | xargs -I {} docker stop {}"
alias xilip="xclip -sel clip"

# Functions
# alias list="ls -lht"
function list () {
    if [ -z "$1" ]; then num=10; fi;
    ls -lht | head -n $num
}

# Copy pipe to clipboard
function copy () {
    read var
    xclip -sel clip <<< $var
}
